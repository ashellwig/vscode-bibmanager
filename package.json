{
    "name": "vscode-bibmanager",
    "displayName": "BibManager - BibTex File Management",
    "description": "VS Code extension for managing BibTex entries",
    "version": "0.0.1",
    "author": {
        "name": "Thomas Day",
        "email": "tday42@gmail.com"
    },
    "publisher": "twday",
    "icon": "images/bibmanager-icon.png",
    "license": "MIT",
    "homepage": "https://github.com/twday/vscode-bibmanager/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/twday/vscode-bibmanager/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/twday/vscode-bibmanager.git"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:bibtex"
    ],
    "main": "./out/extension",
    "keywords": [
        "BibTeX"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.createEntry",
                "category": "BibTex",
                "title": "Create New Entry"
            },
            {
                "command": "extension.deleteEntry",
                "category": "BibTex",
                "title": "Delete Entry"
            },
            {
                "command": "extension.sortEntriesAsc",
                "category": "BibTex",
                "title": "Sort Entries By Key (Ascending)"
            },
            {
                "command": "extension.sortEntriesDsc",
                "category": "BibTex",
                "title": "Sort Entries By Key (Descending)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
